<h2>Tramites</h2>
<table class="lista">
	<tr class="header">
		<td>&nbsp;</td>
		<td>Nombre del Pasajero</td>
		<td>Número de Pasaporte</td>
		<td>Fecha del Viaje</td>
		<td>Fecha de entrega</td>
		<td>¿Es extranjero?</td>
		<td>País</td>
		<td>Fecha consular</td>
	</tr>
	<% @tramites.each do |t| %>
	<tr class="<%= cycle("uno", "dos") %>">
		<td><%= t.id %></td>
		<td><%= t.nombre_pasajero %></td>
		<td><%= t.numero_pasaporte %></td>
		<td><%= t.fecha_viaje %></td>
		<td><%= t.fecha_entrega %></td>
		<td><%= t.extranjero %></td>
		<td><%= t.pais %></td>
		<td><%= t.fecha_consular %></td>
		<td class="acciones">
			<%= link_to("Editar", {:action => 'editar', :id => t.id }, :class =>'boton_link') %>
			<%= link_to("Borrar", {:action => 'borrar', :id => t.id }, :class =>'boton_link') %>
		</td>
	</tr>
	<% end %>
</table>
<div>
	<%= link_to("Agregar Trámite", {:action => 'nuevo'}, :class =>'boton_link') %>
</div>
